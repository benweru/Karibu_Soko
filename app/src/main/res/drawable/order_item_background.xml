<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Rounded Corners -->
    <corners android:radius="12dp" /> <!-- Rounded edges -->

    <!-- Optional Shadow Effect (if needed for elevation-like feel) -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />

    <!-- Optional Border -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- Light gray border -->
</shape>
