<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.fragments.HomeFragment">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/headerSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best trendy collection!"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Categories -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:backgroundTint="@android:color/holo_orange_light"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cutlery"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:elevation="2dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Furniture"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:elevation="2dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jewelry"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:elevation="2dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:elevation="2dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Body Section -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:padding="8dp"
        android:rowCount="2">

        <!-- Item 1 -->
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="216dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemImage1"
                android:layout_width="213dp"
                android:layout_height="169dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/item1"
                app:shapeAppearanceOverlay="@style/RoundedImageView" />

            <TextView
                android:id="@+id/itemName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="Basket"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="KSH. 3,500.00"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="216dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemImage2"
                android:layout_width="213dp"
                android:layout_height="169dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/item2"
                app:shapeAppearanceOverlay="@style/RoundedImageView" />

            <TextView
                android:id="@+id/itemName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="Set of Round Bowls"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="KSH. 2,200.00"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="216dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemImage3"
                android:layout_width="213dp"
                android:layout_height="169dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/item3"
                app:shapeAppearanceOverlay="@style/RoundedImageView" />

            <TextView
                android:id="@+id/itemName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="Bowls"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemPrice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="KSH. 1,500.00"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Item 4 -->
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="216dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemImage4"
                android:layout_width="213dp"
                android:layout_height="169dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/item4"
                app:shapeAppearanceOverlay="@style/RoundedImageView" />



            <TextView
                android:id="@+id/itemName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="Measuring cups"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemPrice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="KSH. 4,000.00"
                android:textSize="12sp" />
        </LinearLayout>
    </GridLayout>
    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navHome"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:contentDescription="Home"
                android:src="@drawable/home_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navSearch"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:contentDescription="Search"
                android:src="@drawable/search_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navCart"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:contentDescription="Cart"
                android:src="@drawable/cart_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navSettings"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:contentDescription="Settings"
                android:src="@drawable/settings_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>